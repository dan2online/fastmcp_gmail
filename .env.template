# FastMCP Gmail Environment Configuration
# Copy this file to .env.local and customize the values

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# Legacy Gmail Configuration (if using client ID/secret directly)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gmail_reader.log

# LLM Configuration
LLM_CACHE_FILE=cache/llm_cache.json
LLM_CONFIDENCE_THRESHOLD=0.85

# Ollama Configuration
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://localhost:11434

# Email Processing Configuration
MAX_EMAILS_PER_REQUEST=50
DEFAULT_EMAIL_COUNT=10
INCLUDE_SPAM_TRASH=false

# Performance Configuration
ENABLE_CACHING=true
CACHE_EXPIRY_HOURS=24
MAX_CONCURRENT_REQUESTS=5

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_RAW_EMAILS=false
